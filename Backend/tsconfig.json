{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": ["jest", "node"],
    "baseUrl": ".",
    "paths": {
      "@services/*": ["app/services/*"],
      "@models/*": ["app/api/*/Models"],
      "@tests/*": ["app/tests/*"]
    }
  },
  "include": ["app/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}
